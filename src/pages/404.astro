---
/* src/pages/404.astro */
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="404" description="Page not found.">
  <div class="error-container">
    <div class="visual-noise"></div>
    
    <div class="content">
      <h1 class="error-code">404</h1>
      <p class="error-text">Negative not found.</p>
      <a href="/" class="btn-return">Return to Light</a>
    </div>
  </div>
</BaseLayout>

<style>
  .error-container {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .error-code {
    font-family: var(--font-mono); /* Keeping Mono here fits the "Error Code" vibe */
    font-size: clamp(5rem, 15vw, 12rem);
    line-height: 1;
    color: var(--text-muted);
    opacity: 0.2;
    margin: 0;
    filter: blur(2px);
  }

  .content {
    position: relative;
    z-index: 2;
    text-align: center;
  }

  .error-text {
    /* UPDATED: Match new site branding */
    font-family: var(--font-sans);
    font-weight: 900; 
    text-transform: uppercase;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin-bottom: 2rem;
    color: var(--text-main);
    letter-spacing: -0.02em;
  }

  .btn-return {
    display: inline-block;
    padding: 12px 24px;
    border: 1px solid var(--border);
    border-radius: 50px;
    text-decoration: none;
    color: var(--text-main);
    
    /* UPDATED: Better legibility */
    font-family: var(--font-sans);
    font-size: 0.9rem; 
    font-weight: 500;
    
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
  }

  .btn-return:hover {
    background: var(--text-main);
    color: var(--bg-paper);
    border-color: var(--text-main);
  }
</style>