---
/* src/pages/info.astro */
import BaseLayout from "../layouts/BaseLayout.astro";
import photosData from "../data/photos.json";

// 1. DATA LOGIC
const allPhotos = photosData.photos || [];
let randomStrip = allPhotos.sort(() => 0.5 - Math.random());

while (randomStrip.length < 15 && randomStrip.length > 0) {
  randomStrip = [...randomStrip, ...randomStrip];
}
randomStrip = randomStrip.slice(0, 15);

// Placeholder for your portrait - Ensure this path is correct
const portraitImage = "/images/ui/IMG_7292.jpg"; 
---

<BaseLayout title="Info" description="About J.R.H. and the process.">
  
  <div class="main-wrapper">

    <header class="page-header">
      <div class="header-content">
        <h1 class="page-title">Info</h1>
        <div class="line-break"></div>
        <p class="page-desc">The context behind the collection.</p>
      </div>
    </header>

    <section class="film-strip-container">
      <div class="film-strip">
        {randomStrip.map((photo, index) => (
          <div class="film-frame">
            <img src={photo.src} alt="" loading="lazy" />
            <span class="frame-number">{index + 1}A</span>
          </div>
        ))}
      </div>
    </section>

    <section class="bio-section">
      <div class="bio-grid">
        
        {/* LEFT COL: Text */}
        <div class="bio-text-col">
          <p class="bio-text">
            I’m <span class="highlight">Jason Hernandez (JRH)</span>, a photographer based in Los Angeles.
          </p>
          
          <p class="bio-text">
            I take pictures of people and everyday life while I’m out and about. I started with film. Having to shoot it, develop it, and print it taught me to pay attention to the edges of the shot and make fast decisions.
          </p>
          
          <p class="bio-text">
            My parents, like a lot of immigrants in the U.S., don’t travel because of the risk. I can’t bring them with me to the cities I visit, so I bring the cities to them.
          </p>

          <p class="bio-text">
            Photographs hold slivers of time. Years later, they’re still there.
          </p>
          
          <div class="contact-block">
            <a href="mailto:photos@heatshockpineapple.com" class="contact-link">Get in touch &rarr;</a>
            <span class="divider">/</span>
            <a href="https://instagram.com/hsphoto70" target="_blank" class="contact-link">Instagram ↗</a>
          </div>
        </div>

        {/* RIGHT COL: Portrait */}
        <div class="bio-image-col">
          <figure class="portrait-frame">
            <img src={portraitImage} alt="Jason Hernandez" loading="lazy" />
            <figcaption class="mono-label">J.R.H. // Los Angeles</figcaption>
          </figure>
        </div>

      </div>
    </section>

    <div class="grid-layout">
      
      <section>
        <h2 class="section-title">01 // The Kit</h2>
        <ul class="resource-list">
          <li>
            <span class="item">Canon EOS M6 Mark II</span>
            <span class="detail">The daily driver.</span>
          </li>
          <li>
            <span class="item">EF-M 22mm f/2</span>
            <span class="detail">35mm equivalent. Pancake lens for travel.</span>
          </li>
          <li>
            <span class="item">EF-M 32mm f/1.4</span>
            <span class="detail">50mm equivalent. Fast for portraits.</span>
          </li>
        </ul>
      </section>

      <section>
        <h2 class="section-title">02 // The Darkroom</h2>
        <ul class="resource-list">
          <li>
            <span class="item">Lightroom Classic</span>
            <span class="detail">Cataloging & Color Grading.</span>
          </li>
          <li>
            <span class="item">Photoshop</span>
            <span class="detail">Heavy retouching and composites.</span>
          </li>
          <li>
            <span class="item">Topaz DeNoise</span>
            <span class="detail">High ISO rescue for night street photography.</span>
          </li>
        </ul>
      </section>

      <section>
        <h2 class="section-title">03 // Input</h2>
        <ul class="resource-list">
          <li>
            <span class="item">The Nature of Photographs</span>
            <span class="detail">Stephen Shore</span>
          </li>
          <li>
            <span class="item">Ways of Seeing</span>
            <span class="detail">John Berger</span>
          </li>
          <li>
            <span class="item">On Photography</span>
            <span class="detail">Susan Sontag</span>
          </li>
        </ul>
      </section>

    </div>

  </div>

  <div class="spacer-bottom"></div>

</BaseLayout>

<style>
  /* --- MAIN WRAPPER --- */
  .main-wrapper {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2vw;
    display: flex;
    flex-direction: column;
  }

  /* --- HEADER --- */
  .page-header {
    margin-top: 3rem;
    margin-bottom: 2rem; 
    width: 100%;
  }
  
  .header-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .page-title {
    font-family: var(--font-sans);
    font-weight: 900;
    font-size: clamp(3rem, 5vw, 4rem);
    line-height: 1;
    margin: 0;
    color: var(--text-main);
    text-transform: uppercase;
  }

  .line-break {
    width: 40px;
    height: 2px;
    background: var(--brand-secondary);
    margin: 0.5rem 0;
    opacity: 0.6;
    align-self: flex-start;
  }

  .page-desc {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin: 0;
    text-align: left;
  }

  /* --- FILM STRIP --- */
  .film-strip-container {
    margin: 2rem 0 5rem 0;
    width: 100%;
    position: relative; 
    overflow: hidden; 
    mask-image: linear-gradient(to right, transparent 0%, black 5%, black 95%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, transparent 0%, black 5%, black 95%, transparent 100%);
  }

  .film-strip {
    display: flex;
    justify-content: flex-start; 
    gap: 2px; 
    background: #000;
    padding: 10px 0;
    overflow-x: auto; 
    scrollbar-width: none;
  }
  .film-strip::-webkit-scrollbar { display: none; }

  @media (max-width: 768px) {
    .film-strip-container { mask-image: none; -webkit-mask-image: none; }
  }

  .film-frame {
    display: block; 
    flex: 0 0 200px;
    height: 150px;
    position: relative;
    background: var(--color-paper-warm-dark); 
    overflow: hidden;
  }

  .film-frame img {
    width: 100%; height: 100%; object-fit: cover;
    opacity: 0.8; filter: grayscale(100%);
    transition: all 0.4s ease;
  }
  .film-frame:hover img {
    opacity: 1; filter: grayscale(0%); transform: scale(1.05);
  }
  .frame-number {
    position: absolute; bottom: 4px; right: 6px;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--brand-secondary);
    text-shadow: 0 1px 2px rgba(0,0,0,0.8);
    opacity: 0.9; pointer-events: none;
  }

  /* --- BIO GRID --- */
  .bio-section {
    margin-bottom: 6rem;
    width: 100%;
  }

  .bio-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 900px) {
    .bio-grid {
      grid-template-columns: 1.5fr 1fr; 
      /* Updated gap to bring elements slightly closer */
      gap: 2rem; 
      align-items: start;
    }
  }

  .bio-text-col {
    display: flex;
    flex-direction: column;
    align-items: flex-start; 
  }

  .bio-text {
    font-size: 1.15rem;
    line-height: 1.65;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    max-width: 65ch; 
  }

  .highlight { color: var(--text-main); font-weight: 500; }

  .contact-block {
    margin-top: 2rem;
    font-family: var(--font-mono);
    font-size: 1rem;
  }
  .contact-link {
    color: var(--text-main); text-decoration: none;
    border-bottom: 1px solid var(--border); transition: all 0.2s ease;
    margin-right: 1.5rem;
  }
  .contact-link:hover { border-bottom-color: var(--brand-secondary); color: var(--brand-secondary); }
  .divider { margin-right: 1.5rem; color: var(--border); display: none; }

  /* --- PORTRAIT STYLES --- */
  .bio-image-col {
    display: flex;
    justify-content: center; 
  }
  
  .portrait-frame {
    margin: 0;
    width: 100%;
    /* UPDATED: Increased Size */
    max-width: 280px; 
    margin-top: 0.3rem; 
  }

  .portrait-frame img {
    width: 100%;
    height: auto;
    aspect-ratio: 3/4;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.5s ease;
    background: var(--bg-surface);
  }
  .portrait-frame:hover img { filter: grayscale(0%); }

  .mono-label {
    display: block;
    margin-top: 10px;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-align: right; 
  }

  /* --- GEAR GRID --- */
  .grid-layout {
    display: grid;
    gap: 4rem;
    width: 100%;
  }

  @media (min-width: 768px) { .grid-layout { grid-template-columns: repeat(2, 1fr); } }
  @media (min-width: 1024px) { .grid-layout { grid-template-columns: repeat(3, 1fr); } }

  .section-title {
    font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.15em;
    color: var(--text-muted); margin-bottom: 2rem;
    border-bottom: 1px solid var(--border); padding-bottom: 1rem;
    text-align: left;
  }

  .resource-list {
    list-style: none; padding: 0;
    display: flex; flex-direction: column; gap: 2rem; 
  }
  .resource-list li { display: flex; flex-direction: column; gap: 0.4rem; text-align: left; }

  .item { font-size: 1rem; font-weight: 500; color: var(--text-main); }
  .detail { font-family: var(--font-mono); font-size: 0.95rem; color: var(--text-muted); line-height: 1.4; }

  @media (max-width: 600px) {
    .page-header { margin-top: 1rem; margin-bottom: 2rem; }
    .page-title { font-size: 2.5rem; }
    .film-strip-container { margin-top: 0; margin-bottom: 3rem; }
  }

  .spacer-bottom { height: 4rem; }
</style>