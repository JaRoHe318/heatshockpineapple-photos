/* src/pages/gallery/index.astro */
import BaseLayout from "../../layouts/BaseLayout.astro";
import PhotoCard from "../../components/PhotoCard.astro";
import photosData from "../../data/photos.json";

const allPhotos = photosData.photos || [];

// --- 1. PREPARE COLLECTIONS ---
const customOrder = ['Portrait', 'Street', 'Travel']; 

const uniqueCollections = [...new Set(allPhotos.map(p => p.collection))]
  .filter(c => c !== 'uncategorized')
  .sort((a, b) => {
    const indexA = customOrder.indexOf(a);
    const indexB = customOrder.indexOf(b);
    if (indexA !== -1 && indexB !== -1) return indexA - indexB;
    if (indexA !== -1) return -1;
    if (indexB !== -1) return 1;
    return a.localeCompare(b);
  });

const collections = uniqueCollections.map(name => {
  const photosInCol = allPhotos.filter(p => p.collection === name);
  return {
    name: name,
    count: photosInCol.length,
    cover: photosInCol[0]?.src
  };
});

// --- 2. PREPARE STREAM ---
const randomStream = allPhotos
  .sort(() => 0.5 - Math.random())
  .slice(0, 15);
---

<BaseLayout title="Gallery" description="Browse gallery and featured shots.">
  
  <header class="gallery-header">
    <h1 class="page-title">Gallery</h1>
    <p class="page-desc">Explore by series or wander through the stream.</p>
  </header>

  <section class="collections-nav">
    <div class="nav-grid">
      {collections.map((col) => (
        <a href={`/gallery/${col.name}`} class="nav-card">
          <div class="nav-img-box">
            <img src={col.cover} alt={col.name} loading="lazy" />
            <div class="nav-overlay">
              <span class="arrow">→</span>
            </div>
          </div>
          <div class="nav-meta">
            <span class="nav-title">{col.name}</span>
            <span class="nav-count">{col.count}</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <div class="stream-toolbar">
    <span class="divider-text">Featured Stream</span>
    
    <div class="divider-line"></div>

    <button id="shuffle-btn" class="btn-shuffle" aria-label="Shuffle Stream">
      Shuffle ↻
    </button>
  </div>

  <section class="photo-grid" id="stream-grid">
    {randomStream.map((photo) => (
      <PhotoCard photo={photo} />
    ))}
  </section>

  <div class="spacer-bottom"></div>

</BaseLayout>

<script>
  /* --- SHUFFLE LOGIC --- */
  document.addEventListener('astro:page-load', () => {
    const btn = document.getElementById('shuffle-btn');
    const grid = document.getElementById('stream-grid');

    if (btn && grid) {
      btn.addEventListener('click', () => {
        // Visual Feedback (Spin the icon?)
        const originalText = btn.innerHTML;
        btn.innerHTML = "↻"; 
        btn.style.opacity = "0.7";
        btn.style.pointerEvents = "none";

        const photos = Array.from(grid.children);

        // Fisher-Yates Shuffle
        for (let i = photos.length - 1; i > 0; i--) {
          const j = Math.floor(Math.random() * (i + 1));
          [photos[i], photos[j]] = [photos[j], photos[i]];
        }

        photos.forEach(photo => grid.appendChild(photo));

        setTimeout(() => { 
          btn.innerHTML = originalText; 
          btn.style.opacity = "1";
          btn.style.pointerEvents = "auto";
        }, 300);
      });
    }
  });
</script>

<style>
  .gallery-header {
    margin-top: 0;
    margin-bottom: 3rem;
  }
  
  .page-title {
    font-family: var(--font-serif);
    font-size: 3rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-main);
  }

  .page-desc {
    color: var(--text-muted);
    font-size: 1.1rem;
  }

  /* --- Gallery NAV --- */
  .collections-nav { margin-bottom: 5rem; }

  .nav-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); 
    gap: 20px;
  }
  
  @media (max-width: 900px) {
    .nav-grid { grid-template-columns: 1fr; }
  }

  .nav-card { text-decoration: none; group: pointer; }

  .nav-img-box {
    aspect-ratio: 16/9;
    border-radius: var(--radius);
    overflow: hidden;
    position: relative;
    margin-bottom: 0.75rem;
    background: var(--bg-surface);
  }

  .nav-img-box img {
    width: 100%; height: 100%; object-fit: cover;
    transition: transform 0.5s ease;
    filter: grayscale(30%);
  }

  .nav-card:hover img { transform: scale(1.05); filter: grayscale(0%); }

  .nav-overlay {
    position: absolute; inset: 0;
    background: rgba(0,0,0,0.2);
    display: flex; align-items: center; justify-content: center;
    opacity: 0; transition: opacity 0.3s ease;
  }

  .nav-card:hover .nav-overlay { opacity: 1; }
  .arrow { color: white; font-size: 1.5rem; border: 1px solid white; padding: 5px 12px; border-radius: 50%; }

  .nav-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    color: var(--text-main);
    text-transform: capitalize;
    display: block;
  }

  .nav-count {
    font-family: var(--font-mono); font-size: 0.75rem; color: var(--text-muted);
  }

  /* --- NEW TOOLBAR STYLES --- */
  .stream-toolbar {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin: 0 0 2rem 0;
    padding-top: 2rem;
  }

  .divider-text {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-muted);
    white-space: nowrap; /* Prevents text from breaking */
  }
  
  /* The Line */
  .divider-line {
    flex: 1; /* This makes the line grow to fill empty space */
    height: 1px;
    background: var(--border);
    opacity: 0.5;
  }

  /* The Button */
  .btn-shuffle {
    background: transparent;
    border: 1px solid var(--border);
    padding: 6px 16px;
    border-radius: 50px;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .btn-shuffle:hover {
    border-color: var(--text-main);
    color: var(--text-main);
  }

  .spacer-bottom { height: 4rem; }
</style>