/* src/pages/gallery/index.astro */
import BaseLayout from "../../layouts/BaseLayout.astro";
import PhotoCard from "../../components/PhotoCard.astro";
import photosData from "../../data/photos.json";

const allPhotos = photosData.photos || [];

// --- 1. PREPARE COLLECTIONS ---
const customOrder = ['Portrait', 'Street', 'Travel']; 

const uniqueCollections = [...new Set(allPhotos.map(p => p.collection))]
  .filter(c => c !== 'uncategorized')
  .sort((a, b) => {
    const indexA = customOrder.indexOf(a);
    const indexB = customOrder.indexOf(b);
    if (indexA !== -1 && indexB !== -1) return indexA - indexB;
    if (indexA !== -1) return -1;
    if (indexB !== -1) return 1;
    return a.localeCompare(b);
  });

const collections = uniqueCollections.map(name => {
  const photosInCol = allPhotos.filter(p => p.collection === name);
  return {
    name: name,
    count: photosInCol.length,
    cover: photosInCol[0]?.src
  };
});

// --- 2. PREPARE STREAM ---
const randomStream = allPhotos
  .sort(() => 0.5 - Math.random())
  .slice(0, 15);
---

<BaseLayout title="Gallery" description="Browse gallery and featured shots.">
  
  <header class="gallery-header">
    <h1 class="page-title">Gallery</h1>
    <p class="page-desc">Explore by series or wander through the stream.</p>
  </header>

  <section class="collections-nav">
    <div class="nav-grid">
      {collections.map((col) => (
        <a href={`/gallery/${col.name}`} class="nav-card">
          <div class="nav-img-box">
            <img src={col.cover} alt={col.name} loading="lazy" />
            <div class="nav-overlay">
              <span class="arrow">→</span>
            </div>
          </div>
          <div class="nav-meta">
            <span class="nav-title">{col.name}</span>
            <span class="nav-count">{col.count}</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <div class="stream-toolbar">
    <span class="divider-text">Featured Stream</span>
    
    <div class="divider-line"></div>

    <button id="shuffle-btn" class="btn-shuffle" aria-label="Shuffle Stream">
      Shuffle ↻
    </button>
  </div>

  <section 
    class="photo-grid" 
    id="stream-grid"
    data-all-photos={JSON.stringify(allPhotos)} 
  >
    {randomStream.map((photo) => (
      <PhotoCard photo={photo} />
    ))}
  </section>

  <div class="spacer-bottom"></div>

</BaseLayout>

<script>
  import PhotoCard from "../../components/PhotoCard.astro"; // Note: You can't import components in client scripts easily like this.
  // Instead, we will generate the HTML string manually since it's simple.

  document.addEventListener('astro:page-load', () => {
    const btn = document.getElementById('shuffle-btn');
    const grid = document.getElementById('stream-grid');

    if (btn && grid) {
      // 1. Read the full list of photos from the data attribute
      const allPhotos = JSON.parse(grid.dataset.allPhotos || '[]');

      btn.addEventListener('click', () => {
        // Visual Feedback
        const originalText = btn.innerHTML;
        btn.innerHTML = "↻"; 
        btn.style.opacity = "0.7";
        btn.style.pointerEvents = "none";
        
        // fade out grid
        grid.style.opacity = "0.5";
        grid.style.transition = "opacity 0.2s";

        setTimeout(() => {
          // 2. Pick 15 NEW random photos from the full list
          const newBatch = allPhotos
            .sort(() => 0.5 - Math.random())
            .slice(0, 15);

          // 3. Rebuild the HTML (Clean version - CSS handles the styling now!)
          grid.innerHTML = newBatch.map(photo => {
            const webpSrc = photo.src.replace(/\.jpg$/, '.webp');
            
            return `
            <figure class="photo-card">
              <a 
                href="${photo.full}" 
                data-pswp-width="${photo.width}" 
                data-pswp-height="${photo.height}" 
                class="pswp-link" 
                aria-label="View full size: ${photo.alt || ''}"
                target="_blank"
              >
                <picture>
                  <source srcset="${webpSrc}" type="image/webp" />
                  <img 
                    src="${photo.src}" 
                    alt="${photo.alt || ''}" 
                    width="${photo.width}"
                    height="${photo.height}"
                    loading="lazy" 
                    decoding="async"
                  />
                </picture>
              </a>
              
              <div class="card-overlay">
                ${photo.exif ? `<span class="overlay-exif">${photo.exif}</span>` : ''}
                <div class="hidden-caption" style="display: none;">
                  ${photo.exif ? `<small style="font-family: var(--font-mono); font-size: 0.8rem; opacity: 0.8;">${photo.exif}</small>` : ''}
                </div>
              </div>
            </figure>
            `;
          }).join('');

          // Reset UI
          grid.style.opacity = "1";
          btn.innerHTML = originalText; 
          btn.style.opacity = "1";
          btn.style.pointerEvents = "auto";
          
          // Re-initialize PhotoSwipe if you are using it
          // (If PhotoSwipe is initialized globally on .photo-grid, it might need a re-scan. 
          //  Usually, if it delegates events, you are fine. If not, you might need to dispatch an event here.)
        }, 300);
      });
    }
  });
</script>

<style>
