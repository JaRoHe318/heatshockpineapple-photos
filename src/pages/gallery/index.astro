  .nav-img-box {
    aspect-ratio: 16/9;
    border-radius: var(--radius);
    overflow: hidden;
    position: relative;
    margin-bottom: 0.75rem;
    background: var(--bg-surface);
  }

  .nav-img-box img {
    width: 100%; height: 100%; object-fit: cover;
    transition: transform 0.5s ease;
    filter: grayscale(30%);
  }

  .nav-card:hover img { transform: scale(1.05); filter: grayscale(0%); }

  .nav-overlay {
    position: absolute; inset: 0;
    background: rgba(0,0,0,0.2);
    display: flex; align-items: center; justify-content: center;
    opacity: 0; transition: opacity 0.3s ease;
  }

  .nav-card:hover .nav-overlay { opacity: 1; }
  .arrow { color: white; font-size: 1.5rem; border: 1px solid white; padding: 5px 12px; border-radius: 50%; }

  .nav-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    color: var(--text-main);
    text-transform: capitalize;
    display: block;
  }

  .nav-count {
    font-family: var(--font-mono); font-size: 0.75rem; color: var(--text-muted);
  }

  /* --- NEW TOOLBAR STYLES --- */
  .stream-toolbar {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin: 0 0 2rem 0;
    padding-top: 2rem;
  }

  .divider-text {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-muted);
    white-space: nowrap; /* Prevents text from breaking */
  }
  
  /* The Line */
