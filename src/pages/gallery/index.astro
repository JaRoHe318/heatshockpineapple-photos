/* src/pages/gallery/index.astro */
import BaseLayout from "../../layouts/BaseLayout.astro";
import PhotoCard from "../../components/PhotoCard.astro";
import photosData from "../../data/photos.json";

const allPhotos = photosData.photos || [];

// --- 1. PREPARE COLLECTIONS ---
// Custom order for your pillars
const customOrder = ['Portrait', 'Street', 'Transit'];

const uniqueCollections = [...new Set(allPhotos.map(p => p.collection))]
  .filter(c => c !== 'uncategorized')
  .sort((a, b) => {
    const indexA = customOrder.indexOf(a);
    const indexB = customOrder.indexOf(b);
    if (indexA !== -1 && indexB !== -1) return indexA - indexB;
    if (indexA !== -1) return -1;
    if (indexB !== -1) return 1;
    return a.localeCompare(b);
  });

const collections = uniqueCollections.map(name => {
  const photosInCol = allPhotos.filter(p => p.collection === name);
  return {
    name: name,
    count: photosInCol.length,
    cover: photosInCol[0]?.src 
  };
});

// --- 2. PREPARE STREAM ---
const randomStream = allPhotos
  .sort(() => 0.5 - Math.random())
  .slice(0, 15);
---

<BaseLayout title="Gallery" description="Browse gallery and featured shots.">
  
  <header class="gallery-header">
    <div class="header-content">
      <h1 class="page-title">Gallery</h1>
      <div class="line-break"></div>
      <p class="page-desc">Explore by series or wander the stream.</p>
    </div>
  </header>

  <section class="collections-nav">
    <div class="nav-grid">
      {collections.map((col) => (
        <a href={`/gallery/${col.name}`} class="nav-card group">
          <div class="nav-img-box">
            <img src={col.cover} alt={col.name} loading="lazy" />
            <div class="nav-overlay">
              <span class="arrow">View Series &rarr;</span>
            </div>
          </div>
          <div class="nav-meta">
            <h2 class="nav-title">{col.name}</h2>
            <span class="nav-count mono">{col.count} Frames</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <div class="stream-toolbar">
    <span class="divider-text">Featured Stream</span>
    <div class="divider-line"></div>
    <button id="shuffle-btn" class="btn-shuffle" aria-label="Shuffle Stream">
      Shuffle ↻
    </button>
  </div>

  <section 
    class="photo-grid sharp-grid" 
    id="stream-grid"
    data-all-photos={JSON.stringify(allPhotos)} 
  >
    {randomStream.map((photo) => (
      <div class="masonry-item">
        <PhotoCard photo={photo} />
      </div>
    ))}
  </section>

  <div class="spacer-bottom"></div>

</BaseLayout>

<script>
  // CLIENT SIDE SHUFFLE LOGIC
  document.addEventListener('astro:page-load', () => {
    const btn = document.getElementById('shuffle-btn');
    const grid = document.getElementById('stream-grid');

    if (btn && grid) {
      const allPhotos = JSON.parse(grid.dataset.allPhotos || '[]');

      btn.addEventListener('click', () => {
        const originalText = btn.innerHTML;
        btn.innerHTML = "↻"; 
        btn.style.opacity = "0.7";
        btn.style.pointerEvents = "none";
        
        grid.style.opacity = "0.5";
        grid.style.transition = "opacity 0.2s";

        setTimeout(() => {
          const newBatch = allPhotos
            .sort(() => 0.5 - Math.random())
            .slice(0, 15);

          grid.innerHTML = newBatch.map(photo => {
            const webpSrc = photo.src.replace(/\.jpg$/, '.webp');
            // Re-creating the HTML for Masonry Items
            return `
            <div class="masonry-item">
              <figure class="photo-card sharp-card">
                <a 
                  href="${photo.full}" 
                  data-pswp-width="${photo.width}" 
                  data-pswp-height="${photo.height}" 
                  class="pswp-link" 
                  aria-label="View full size: ${photo.alt || ''}"
                  target="_blank"
                >
                  <picture>
                    <source srcset="${webpSrc}" type="image/webp" />
                    <img 
                      src="${photo.src}" 
                      alt="${photo.alt || ''}" 
                      width="${photo.width}"
                      height="${photo.height}"
                      loading="lazy" 
                      decoding="async"
                    />
                  </picture>
                </a>
                <div class="card-overlay"></div>
              </figure>
            </div>
            `;
          }).join('');

          grid.style.opacity = "1";
          btn.innerHTML = originalText;
          btn.style.opacity = "1";
          btn.style.pointerEvents = "auto";
        }, 300);
      });
    }
  });
</script>

<style>
  /* --- PAGE HEADER (Fixed "Floating" Issue) --- */
  .gallery-header {
    margin-top: 3rem;
    margin-bottom: 4rem;
    display: flex;
    justify-content: center;
  }
  
  .header-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem; /* Tighter gap between title and desc */
    border-bottom: 1px solid transparent; 
  }

  .page-title {
    font-family: var(--font-serif);
    font-size: clamp(3rem, 5vw, 4rem); 
    line-height: 1;
    margin: 0;
    color: var(--text-main);
  }
  
  /* Optional: A small accent line to anchor the text */
  .line-break {
    width: 40px;
    height: 2px;
    background: var(--brand-secondary); /* Gold accent */
    margin: 0.5rem 0;
    opacity: 0.6;
  }

  .page-desc {
    font-family: var(--font-mono); 
    color: var(--text-muted);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0;
  }

  /* --- PILLAR NAVIGATION --- */
  .collections-nav { 
    margin-bottom: 5rem; 
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 2vw;
  }

  .nav-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); 
    gap: 1.5rem; 
  }

  .nav-card {
    text-decoration: none; 
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    cursor: pointer;
  }

  .nav-img-box {
    aspect-ratio: 2/3; /* The Pillar Look */
    width: 100%;
    border-radius: 0; 
    overflow: hidden;
    position: relative;
    background: var(--bg-surface);
  }

  .nav-img-box img {
    width: 100%;
    height: 100%; 
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1), filter 0.4s ease;
    filter: grayscale(10%);
    image-rendering: -webkit-optimize-contrast; 
  }

  .nav-card:hover .nav-img-box img { 
    transform: scale(1.03); 
    filter: grayscale(0%);
  }

  .nav-overlay {
    position: absolute; inset: 0;
    background: rgba(0,0,0,0.3);
    display: flex; align-items: center; justify-content: center;
    opacity: 0; transition: opacity 0.3s ease;
  }
  .nav-card:hover .nav-overlay { opacity: 1; }

  .arrow { 
    color: white;
    font-family: var(--font-mono);
    font-size: 0.8rem; 
    border: 1px solid white; 
    padding: 8px 16px; 
    border-radius: 0; /* Sharp button */
    text-transform: uppercase;
    background: rgba(0,0,0,0.5);
    backdrop-filter: blur(4px);
  }

  .nav-meta {
    display: flex; flex-direction: column; gap: 0.25rem;
    border-left: 2px solid transparent; padding-left: 0;
    transition: all 0.3s ease;
  }
  .nav-card:hover .nav-meta {
    border-left-color: var(--brand-secondary); padding-left: 10px;
  }

  .nav-title {
    font-family: var(--font-serif); font-size: 1.5rem; margin: 0;
    color: var(--text-main); font-weight: 500;
  }
  .nav-count { color: var(--text-muted); font-size: 0.75rem; }

  /* --- STREAM TOOLBAR --- */
  .stream-toolbar {
    display: flex; align-items: center; gap: 1.5rem; margin: 0 auto 2rem;
    max-width: 1400px; padding: 0 2vw;
  }
  .divider-text {
    font-family: var(--font-mono); font-size: 0.75rem;
    text-transform: uppercase; letter-spacing: 0.15em; color: var(--text-muted);
    white-space: nowrap;
  }
  .divider-line { flex: 1; height: 1px; background: var(--border); opacity: 0.5; }
  .btn-shuffle {
    background: transparent; border: 1px solid var(--border); padding: 6px 16px;
    border-radius: 0; font-family: var(--font-mono); font-size: 0.7rem;
    color: var(--text-muted); cursor: pointer; transition: all 0.2s ease;
    text-transform: uppercase;
  }
  .btn-shuffle:hover {
    border-color: var(--text-main); color: var(--text-main); background: var(--bg-surface);
  }

  /* --- THE TIGHT 4PX STREAM --- */
  .photo-grid {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2vw;
    
    /* MASONRY COLUMNS */
    column-count: 3;
    
    /* THE TIGHT GAP (Matches Home Page) */
    column-gap: 4px;
  }

  .masonry-item {
    /* Break inside avoid keeps the image from splitting across columns */
    break-inside: avoid;
    
    /* Bottom spacing for the masonry items */
    margin-bottom: 4px;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 900px) {
    .nav-grid { grid-template-columns: repeat(2, 1fr); gap: 1rem; }
    .photo-grid { column-count: 2; }
  }

  @media (max-width: 600px) {
    .gallery-header { margin-top: 1rem; margin-bottom: 2rem; }
    .page-title { font-size: 2.5rem; }
    .nav-grid { grid-template-columns: repeat(2, 1fr); gap: 0.75rem; }
    .nav-title { font-size: 1.1rem; }
    
    /* On mobile, usually 2 columns is still good, or 1 if photos are detailed */
    .photo-grid { column-count: 2; } 
  }

  .spacer-bottom { height: 6rem; }
</style>

<style is:global>
  /* 1. Force Sharp Corners */
  .sharp-grid .photo-card, 
  .sharp-grid .photo-card img {
    border-radius: 0 !important;
  }
  
  /* 2. Remove default margins from PhotoCard component so Masonry handles it */
  .sharp-grid .photo-card {
    margin: 0 !important; 
    width: 100%;
    display: block;
  }
  
  /* 3. Crisp Images */
  .photo-grid img {
    image-rendering: -webkit-optimize-contrast;
  }
</style>