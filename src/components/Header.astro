---
import Search from "./Search.astro"; 

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="site-header">
  <div class="header-inner">
    
    <a href="https://heatshockpineapple.com" class="site-title">
      <img src="/images/ui/logo.png" alt="Logo" class="header-logo" />
      <span class="brand-text">Heat Shock Pineapple</span>
    </a>

    <div class="header-controls">
      
      <nav id="site-nav" class="site-nav">
        <a href="/" class={currentPath === "" ? "active" : ""}>Home</a>
        <a href="/gallery" class={currentPath.startsWith("gallery") ? "active" : ""}>Gallery</a>
        <a href="/resources" class={currentPath.startsWith("resources") ? "active" : ""}>Resources</a>
        
        <div class="mobile-icons">
          <button class="icon-btn search-trigger" aria-label="Open Search">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
            <span>Search</span>
          </button>
          
          <button class="icon-btn theme-trigger" aria-label="Toggle Dark Mode">
            <span class="theme-text">Theme</span>
            <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
            <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
          </button>
        </div>
      </nav>

      <div class="control-separator desktop-only"></div>

      <button class="icon-btn search-trigger desktop-only" aria-label="Open Search">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
      </button>

      <button class="icon-btn theme-trigger desktop-only" aria-label="Toggle Dark Mode">
        <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
        <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
      </button>

      <button id="menu-toggle" class="menu-toggle" aria-label="Toggle Menu">
        <span class="bar"></span><span class="bar"></span><span class="bar"></span>
      </button>
      
    </div>
  </div>
</header>

<div id="search-modal" class="search-modal" aria-hidden="true">
  <div class="modal-bg" id="modal-bg"></div>
  <div class="modal-content">
    <Search />
  </div>
</div>

<script>
  function setupHeader() {
    // --- 1. MOBILE MENU TOGGLE ---
    const menuToggle = document.getElementById('menu-toggle');
    const nav = document.getElementById('site-nav');

    if (menuToggle && nav) {
      const newToggle = menuToggle.cloneNode(true);
      menuToggle.parentNode.replaceChild(newToggle, menuToggle);

      newToggle.addEventListener('click', (e) => {
        e.stopPropagation();
        newToggle.classList.toggle('open');
        nav.classList.toggle('open');
      });

      nav.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          newToggle.classList.remove('open');
          nav.classList.remove('open');
        });
      });

      nav.addEventListener('click', (e) => {
        if (e.target === nav) {
          newToggle.classList.remove('open');
          nav.classList.remove('open');
        }
      });
    }

    // --- 2. SEARCH LOGIC ---
    const searchBtns = document.querySelectorAll('.search-trigger');
    const searchModal = document.getElementById('search-modal');
    const modalBg = document.getElementById('modal-bg');

    function openModal() {
      if(searchModal) {
        searchModal.classList.add('open');
        searchModal.setAttribute('aria-hidden', 'false');
        setTimeout(() => {
          const input = searchModal.querySelector('input');
          if (input) input.focus();
        }, 100);
        
        const activeNav = document.getElementById('site-nav');
        const activeToggle = document.getElementById('menu-toggle');
        if(activeNav) activeNav.classList.remove('open');
        if(activeToggle) activeToggle.classList.remove('open');
      }
    }

    function closeModal() {
      if(searchModal) {
        searchModal.classList.remove('open');
        searchModal.setAttribute('aria-hidden', 'true');
      }
    }

    searchBtns.forEach(btn => {
      const newBtn = btn.cloneNode(true);
      btn.parentNode.replaceChild(newBtn, btn);
      newBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        openModal();
      });
    });

    if (modalBg) {
       const newBg = modalBg.cloneNode(true);
       modalBg.parentNode.replaceChild(newBg, modalBg);
       newBg.addEventListener('click', closeModal);
    }
    
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && searchModal && searchModal.classList.contains('open')) {
        closeModal();
      }
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        openModal();
      }
    });

    // --- 3. THEME LOGIC ---
    const themeBtns = document.querySelectorAll('.theme-trigger');
    themeBtns.forEach(btn => {
      const newBtn = btn.cloneNode(true);
      btn.parentNode.replaceChild(newBtn, btn);
      
      newBtn.addEventListener('click', () => {
        const element = document.documentElement;
        const current = element.getAttribute("data-theme");
        const next = current === "dark" ? "light" : "dark";
        element.setAttribute("data-theme", next);
        localStorage.setItem("theme", next);
      });
    });
  }

  document.addEventListener('astro:page-load', setupHeader);
</script>

<style>
  /* Base Layout */
  .site-header { 
    position: sticky;
    top: 0; z-index: 1000; padding: 0.8rem 0;
  }
  
  .site-header::before {
    content: "";
    position: absolute; inset: 0; z-index: -1;
    background: rgba(253, 251, 247, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
  }
  :global([data-theme="dark"]) .site-header::before { background: rgba(26, 25, 24, 0.9); }

  /* FIX: Match BaseLayout width (1400px) and padding */
  .header-inner { 
    width: 100%;
    max-width: 1400px; /* MATCHES BASE LAYOUT */
    margin: 0 auto;
    padding: 0 24px; /* MATCHES BASE LAYOUT MOBILE */
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
  }

  @media (min-width: 768px) {
    .header-inner {
      padding: 0 40px; /* MATCHES BASE LAYOUT DESKTOP */
    }
  }
  
  .site-title { display: flex; align-items: center;
    gap: 0.75rem; font-family: var(--font-serif); font-weight: 600; font-size: 1.1rem; color: var(--text-main); text-decoration: none; z-index: 1002; }
  .header-logo { height: 32px;
    width: auto; border-radius: 4px; }

  .header-controls { display: flex; align-items: center; gap: 1rem; }
  .control-separator { width: 1px;
    height: 24px; background: var(--border); margin: 0 0.5rem; }

  /* Buttons */
  .icon-btn { background: none; border: none;
    cursor: pointer; color: var(--text-muted); padding: 5px; display: flex; align-items: center; transition: color 0.2s; }
  .icon-btn:hover { color: var(--text-main); }

  /* Nav Links (Desktop) */
  .site-nav { display: flex; gap: 1.5rem; }
  .site-nav a { font-size: 0.9rem; font-weight: 500; color: var(--text-muted); text-decoration: none; }
  .site-nav a:hover, .site-nav a.active { color: var(--text-main); }
  
  /* Mobile Icons Container */
  .mobile-icons { display: none; }

  /* Theme Icons */
  .moon-icon { display: none; }
  :global([data-theme="dark"]) .sun-icon { display: none; }
  :global([data-theme="dark"]) .moon-icon { display: block; }

  /* SEARCH MODAL */
  .search-modal { position: fixed; inset: 0;
    z-index: 2000; display: flex; justify-content: center; align-items: flex-start; padding-top: 15vh; opacity: 0; pointer-events: none; transition: opacity 0.2s ease;
  }
  .search-modal.open { opacity: 1; pointer-events: auto; }
  
  .modal-bg { 
    position: absolute; inset: 0; 
    background: rgba(255, 255, 255, 0.9); 
    backdrop-filter: blur(4px);
  }
  :global([data-theme="dark"]) .modal-bg { background: rgba(0, 0, 0, 0.6); }

  .modal-content { position: relative; width: 100%; max-width: 600px; background: transparent; padding: 20px; z-index: 2001; transform: translateY(-10px);
    transition: transform 0.2s ease; }
  .search-modal.open .modal-content { transform: translateY(0); }

  /* --- RESPONSIVE LOGIC --- */
  .menu-toggle { display: none; }

  @media (max-width: 768px) {
    .desktop-only { display: none !important; }
    
    .menu-toggle { display: flex;
      flex-direction: column; justify-content: space-between; width: 30px; height: 21px; background: transparent; border: none; cursor: pointer; z-index: 1002; padding: 0;
    }
    .bar { width: 100%; height: 3px; background-color: var(--text-main); border-radius: 3px; transition: all 0.3s ease; }
    .menu-toggle.open .bar:nth-child(1) { transform: translateY(9px) rotate(45deg); }
    .menu-toggle.open .bar:nth-child(2) { opacity: 0; }
    .menu-toggle.open .bar:nth-child(3) { transform: translateY(-9px) rotate(-45deg); }

    .site-nav { display: none; }
    
    .site-nav.open {
      display: flex; position: fixed; inset: 0;
      background-color: var(--bg-paper);
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      z-index: 1001;
    }

    .site-nav.open a { font-size: 1.5rem; font-weight: 600; }

    .mobile-icons {
      display: flex; gap: 2rem;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border);
    }
    
    .mobile-icons .icon-btn {
      flex-direction: column;
      gap: 8px; font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
  }
</style>