---
/* src/components/PhotoCard.astro */
interface Props {
  photo: {
    src: string;
    full: string;
    alt: string;
    exif?: string;
    width: number;
    height: number;
    id: string;
  };
}

const { photo } = Astro.props;
const webpSrc = photo.src.replace(/\.jpg$/, '.webp');
---

<figure class="photo-card">
  <a 
    href={photo.full} 
    data-pswp-width={photo.width}
    data-pswp-height={photo.height}
    class="pswp-link"
    aria-label={`View full size: ${photo.alt}`}
  >
    <picture>
      <source srcset={webpSrc} type="image/webp" />
      <img 
        src={photo.src} 
        alt={photo.alt}
        width={photo.width}
        height={photo.height}
        loading="lazy"
        decoding="async"
        style={`aspect-ratio: ${photo.width} / ${photo.height};`} 
      />
    </picture>
  </a>
  
  {/* HOVER OVERLAY */}
  <div class="card-overlay">
    {photo.exif && <span class="overlay-exif">{photo.exif}</span>}
    
    {/* HIDDEN CAPTION (For Lightbox) */}
    {/* FIX: clamp() scales the font between 0.9rem (mobile) and 1.4rem (desktop) */}
    <div class="hidden-caption" style="display: none;">
      {photo.exif && (
        <small style="font-family: var(--font-mono); font-size: clamp(0.9rem, 3vw, 1.4rem); opacity: 0.8;">
          {photo.exif}
        </small>
      )}
    </div>
  </div>
</figure>

<style is:global>
  .photo-card {
    position: relative;
    z-index: 1;
    margin-bottom: 20px;
    break-inside: avoid;
    border-radius: var(--radius);
    overflow: hidden;
    display: block; 
  }

  .pswp-link {
    display: block;
    width: 100%;
    height: 100%;
    cursor: zoom-in;
  }

  .photo-card img {
    display: block;
    width: 100%;
    height: auto;
    transition: opacity 0.3s ease;
  }

  .photo-card:hover img {
    opacity: 0.95;
  }

  /* --- OVERLAY STYLES --- */
  .card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px 12px 12px;
    background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);
    opacity: 0; 
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .photo-card:hover .card-overlay {
    opacity: 1;
  }

  .overlay-exif {
    font-family: var(--font-mono);
    
    /* FIX: Scales between 0.85rem (Mobile) and 1.1rem (Desktop) */
    font-size: clamp(0.85rem, 2.5vw, 1.1rem);
    
    color: rgba(255,255,255,0.95);
    letter-spacing: 0.05em;
  }
</style>