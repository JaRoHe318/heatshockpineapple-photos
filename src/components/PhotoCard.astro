---
/* src/components/PhotoCard.astro */
interface Props {
  photo: {
    src: string;
    full: string;
    alt: string;
    exif?: string;
    caption?: string; /* <--- NEW: Optional Caption */
    width: number;
    height: number;
    id: string;
  };
  sharp?: boolean;
}

const { photo, sharp = false } = Astro.props;
const webpSrc = photo.src.replace(/\.jpe?g$/i, '.webp');
---

<figure class:list={["photo-card", { "is-sharp": sharp }]}>
  <a 
    href={photo.full} 
    data-pswp-width={photo.width}
    data-pswp-height={photo.height}
    class="pswp-link"
    aria-label={`View full size: ${photo.alt}`}
    target="_blank"
  >
    <picture>
      <source srcset={webpSrc} type="image/webp" />
      <img 
        src={photo.src} 
        alt={photo.alt}
        width={photo.width}
        height={photo.height}
        loading="lazy"
        decoding="async"
        style={`aspect-ratio: ${photo.width} / ${photo.height};`} 
      />
    </picture>
  </a>
  
  <div class="card-overlay">
    {/* Visual EXIF on hover (Grid View) */}
    {photo.exif && <span class="overlay-exif">{photo.exif}</span>}
    
    {/* --- LIGHTBOX DATA SOURCE --- */}
    {/* This is hidden on the grid but scraped by the Lightbox script */}
    <div class="hidden-caption" style="display: none;">
      
      {/* 1. The Story (Only renders if 'caption' exists in JSON) */}
      {photo.caption && (
        <p class="lightbox-caption-body">{photo.caption}</p>
      )}

      {/* 2. The Tech Specs (Always renders if 'exif' exists) */}
      {photo.exif && (
        <small class="lightbox-caption-text">{photo.exif}</small>
      )}
    </div>
  </div>
</figure>

<style is:global>
  .photo-card {
    position: relative;
    z-index: 1;
    margin-bottom: 20px;
    break-inside: avoid;
    
    /* DEFAULT: Rounded */
    border-radius: var(--radius);
    overflow: hidden;
    display: block;
    background: var(--bg-surface);
  }

  /* OPTIONAL: Sharp Mode */
  .photo-card.is-sharp {
    border-radius: 0;
    margin-bottom: 0;
  }

  .pswp-link {
    display: block;
    width: 100%;
    height: 100%;
    cursor: zoom-in;
  }

  .photo-card img {
    display: block;
    width: 100%;
    height: auto;
    transition: opacity 0.3s ease;
  }
  
  .photo-card:hover img { opacity: 0.95; }

  /* --- OVERLAY --- */
  .card-overlay {
    position: absolute;
    bottom: 0; left: 0; right: 0;
    padding: 20px 12px 12px;
    background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  .photo-card:hover .card-overlay { opacity: 1; }

  .overlay-exif {
    font-family: var(--font-mono);
    font-size: clamp(0.85rem, 2.5vw, 1.1rem);
    color: rgba(255,255,255,0.95);
    letter-spacing: 0.05em;
  }
</style>