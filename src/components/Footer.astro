---
/* src/components/Footer.astro */
const currentYear = new Date().getFullYear();
const EMAIL_ADDRESS = "photos@heatshockpineapple.com";
---

<footer class="site-footer">
  <div class="footer-inner">
    
    <div class="footer-brand">
      
      <div class="brand-lockup">
        <img 
          src="/android-chrome-512x512.png" 
          alt="Heat Shock Pineapple" 
          class="footer-logo" 
          height="32" 
          width="32" 
        />
        
        <div class="brand-block">
          <span class="word-top">HEATSHOCK</span>
          <span class="word-btm gold">PINEAPPLE</span>
        </div>
      </div>
      
      <div class="meta-group">
        <p class="copyright">&copy; {currentYear} Jason Hernandez</p>
        <p class="location">Based in Los Angeles</p>
      </div>
    </div>

    <div class="footer-links">
      <a href={`mailto:${EMAIL_ADDRESS}`}>Email</a>
      <a href="https://github.com/jarohe318" target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href="https://heatshockpineapple.substack.com" target="_blank" rel="noopener noreferrer">Substack</a>
      <a href="https://www.linkedin.com/in/jrh318" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </div>

  </div>
</footer>

<style>
  /* =========================================
     FOOTER LAYOUT
     ========================================= */
  .site-footer {
    width: 100%;
    /* TOKEN: Matches Header Background (Jungle Green) */
    background: var(--color-jungle-800, #243b30);
    /* TOKEN: Matches Header Text (White) */
    color: var(--text-inverse, #ffffff);
    
    /* Layout Logic */
    margin-top: 6rem;
    padding: 3rem 0; 
    
    /* THE FIXES: Prevents scrolling bugs & squished content */
    overflow: hidden;
    flex-shrink: 0; 
    
    /* Visual Separator */
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-inner {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1.5rem; 
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .footer-inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  /* =========================================
     BRANDING LOCKUP
     ========================================= */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem; 
  }

  .brand-lockup {
    display: flex;
    align-items: center;
    gap: 0.4rem; /* Matches Header Gap */
  }

  .footer-logo {
    height: 32px;
    width: auto; 
    border-radius: 4px;
    display: block;
    object-fit: contain;
  }

  .brand-block {
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 1;
    transform: translateY(1px); /* Optical alignment */
  }

  .word-top, .word-btm {
    font-family: var(--font-sans);
    font-weight: 900; 
    font-size: 0.85rem; 
    color: inherit; 
    display: block;
    -webkit-font-smoothing: antialiased;
  }

  .word-top {
    letter-spacing: 0.3em;
  }

  .word-btm {
    /* Precise spacing for alignment */
    letter-spacing: 0.4065em;
  }

  .gold {
    color: var(--brand-secondary, #ffd700);
  }

  /* === METADATA === */
  .meta-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .copyright, .location {
    font-family: var(--font-mono);
    font-size: 0.75rem; 
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
    line-height: 1.4;
  }

  /* =========================================
     LINKS
     ========================================= */
  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .footer-links a {
    font-family: var(--font-sans);
    font-size: 0.75rem; 
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-bottom: 1px solid transparent;
    padding-bottom: 2px;
  }

  .footer-links a:hover {
    color: var(--text-inverse, #ffffff);
    letter-spacing: 0.15em;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  }
</style>