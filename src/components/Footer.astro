---
/* src/components/Footer.astro */
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-inner">
    
    <div class="footer-brand">
      <span class="brand-text">Heat Shock<span class="gold">Pineapple</span></span>
      <p class="copyright">&copy; {currentYear} Jason Hernandez</p>
    </div>

    <div class="footer-links">
      <a href="https://github.com/jarohe318" target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href="https://heatshockpineapple.substack.com" target="_blank" rel="noopener noreferrer">Substack</a>
      <a href="https://www.linkedin.com/in/jrh318" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </div>

  </div>
</footer>

<style>
  .site-footer {
    width: 100%;
    /* TOKEN: Matches Header Background */
    background: var(--color-jungle-800);
    /* CHANGE: Hardcoded to white so it never flips to black, even if theme vars change */
    color: #ffffff;
    margin-top: 6rem;
    padding: 3rem 0;
  }

  .footer-inner {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .footer-inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  /* BRANDING */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .brand-text {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 600;
    /* CHANGE: Inherit ensures it stays white like the parent container */
    color: inherit;
    word-spacing: -0.15em; 
  }

  /* .gold class is handled by global.css utility */
  .gold {
    font-style: normal;
    margin-left: 0.2em;
  }

  .copyright {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }

  /* LINKS */
  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    font-family: var(--font-sans);
    font-size: 0.95rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: #ffffff;
  }
</style>