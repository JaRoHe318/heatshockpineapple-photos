---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="sequence-tape" aria-hidden="true">
    <div class="scrolling-text">
      OPTICS · REFRACTION · APERTURE · DIFFRACTION · CHROMATIC ABERRATION · FOCAL LENGTH · DEPTH OF FIELD · CIRCLE OF CONFUSION · HYPERFOCAL DISTANCE · BOKEH · SHUTTER ANGLE · ISO INVARIANCE · DYNAMIC RANGE · OPTICS · REFRACTION · APERTURE · DIFFRACTION · CHROMATIC ABERRATION · FOCAL LENGTH · DEPTH OF FIELD · CIRCLE OF CONFUSION · HYPERFOCAL DISTANCE · BOKEH · SHUTTER ANGLE · ISO INVARIANCE · DYNAMIC RANGE
    </div>
  </div>

  <div class="footer-content">
    <p>&copy; {currentYear} Jason Hernandez.</p>
    <div class="footer-links">
      <a href="https://github.com/jarohe318" target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href="https://heatshockpineapple.substack.com" target="_blank" rel="noopener noreferrer">Substack</a>
      <a href="https://www.linkedin.com/in/jrh318" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    margin-top: 6rem;
    border-top: 1px solid var(--border);
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
    overflow: hidden;
  }

  .sequence-tape {
    width: 100%;
    background: var(--bg-surface);
    border-bottom: 1px solid var(--border);
    padding: 0.4rem 0;
    margin-bottom: 2rem;
    user-select: none;
    opacity: 0.5;
  }

  .scrolling-text {
    white-space: nowrap;
    font-size: 0.7rem;
    letter-spacing: 0.15em; /* Increased slightly for readability */
    color: var(--accent-primary);
    /* Slower animation for a more relaxed, thoughtful feel */
    animation: scroll 60s linear infinite; 
  }

  /* TIP: If the text is too short, the loop might "jump". 
     The text in the HTML above is repeated once to ensure it fills 
     most screens before the animation loops.
  */
  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    border-bottom: none;
    color: var(--text-muted);
    transition: color 0.2s ease;
    text-decoration: none;
  }

  .footer-links a:hover {
    color: var(--accent-primary);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>